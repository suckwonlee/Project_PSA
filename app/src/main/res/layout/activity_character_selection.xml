<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="16dp">

    <!-- 상단: 캐릭터 선택 제목 -->
    <TextView
        android:id="@+id/title_character_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="캐릭터 선택"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="8dp" />

    <!-- 캐릭터 그리드: 4x2 -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:columnCount="4"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true">

        <!-- 용사후보 -->
        <LinearLayout
            android:id="@+id/char1_container"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center">
            <ImageButton
                android:id="@+id/char1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/placeholder_char1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="용사후보"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/char2_container"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center">
            <ImageButton
                android:id="@+id/char2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/hunter"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사냥꾼"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/char3_container"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center">
            <ImageButton
                android:id="@+id/char3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/priest"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성직자"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/char4_container"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center">
            <ImageButton
                android:id="@+id/char4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/mage"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="마법사"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/char5_container"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center">
            <ImageButton
                android:id="@+id/char5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/druid"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="드루이드"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/char6_container"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center">
            <ImageButton
                android:id="@+id/char6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/engineer"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기술자"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/char7_container"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center">
            <ImageButton
                android:id="@+id/char7"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/bard"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="음유시인"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/char8_container"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center">
            <ImageButton
                android:id="@+id/char8"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/exotic"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이계종"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </LinearLayout>

    </GridLayout>

    <!-- 하단 정보 패널: 고정 높이 + 내부 가중치 분배 -->
    <LinearLayout
        android:id="@+id/panel_info"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/dark_gray"
        android:padding="16dp"
        android:layout_marginTop="24dp">

        <!-- 1행: 이미지뷰 + 안내 텍스트뷰 (높이 고정) -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/portrait"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@android:color/transparent"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/detail_prompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="캐릭터를 선택하세요."
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:gravity="center_vertical" />

        </LinearLayout>

        <!-- 2행: 상세 설명용 텍스트뷰 (남은 공간 채움) -->
        <TextView
            android:id="@+id/detail_placeholder"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:text="설명 및 장비 정보가 여기에 표시됩니다."
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:paddingTop="8dp" />

        <LinearLayout
            android:id="@+id/skill_selection"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:weightSum="4">

            <!-- Attack Skill -->
            <Spinner
                android:id="@+id/spinner_attack_skill"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:prompt="공격 스킬" />

            <!-- Defense Skill -->
            <Spinner
                android:id="@+id/spinner_defense_skill"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:prompt="방어 스킬" />

            <!-- Rune Slot 1 -->
            <Spinner
                android:id="@+id/spinner_rune1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:prompt="룬 슬롯 1" />

            <!-- Rune Slot 2 -->
            <Spinner
                android:id="@+id/spinner_rune2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:prompt="룬 슬롯 2" />

        </LinearLayout>

        <!-- 3.4 시작/해금 버튼 (스피너 아래 배치) -->

    </LinearLayout>

    <Button
        android:id="@+id/btn_action"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:contentDescription="Play or Unlock"
        android:text="시작" />

</LinearLayout>


